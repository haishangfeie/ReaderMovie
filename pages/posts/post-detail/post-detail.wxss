.container {
    display: flex;
    flex-direction:column;
}
.head-image {
    width: 100%;
    height: 460rpx;
}
.audio {
    width: 102rpx;
    height: 110rpx;
    position: absolute;
    left: 50%;
    top: 180rpx;
    margin-left: -51rpx;
    opacity:.6;
}
.author-date {
    width: 100%;
}
.author-date image {
    width: 64rpx;
    height: 64rpx;
    vertical-align: middle;
}
.author-date text {
    font-size: 24rpx;
    vertical-align: bottom;
    color: #999;
}
.author-date .author {
    font-size:30rpx;
    font-weight: 300;
    vertical-align: middle;
    padding-left: 20rpx;
    color: #666;
    margin-right: 20rpx;        
}
.author-date  .const-text {
    margin-right: 30rpx;    
}
.title {
    margin-top: 70rpx;
    margin-left: 40rpx;
    font-size: 36rpx;
    font-weight: 700;
    letter-spacing:2px;
    color: #4b556c;
}
.tool {
    margin-top: 20rpx;
}
.circle-img {
    float:right;
    margin-right: 40rpx;
    vertical-align:middle;
}
.circle-img image {
    width: 90rpx;
    height: 90rpx;
}
.share-img {
    margin-left: 30rpx;
}
.horizon {
    width: 660rpx;
    height: 1px;
    background-color: #e5e5e5;
    position: relative;
    top: 46rpx;
    margin:0 auto;
    z-index: -99;
}
.detail {
    color: #666;
    margin-left: 30rpx;
    margin-top: 20rpx;
    margin-right: 30rpx;
    line-height: 44rpx;
    letter-spacing: 2px;
}